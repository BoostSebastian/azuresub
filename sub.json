{
  "$schema": "https://schema.management.azure.com/schemas/2019-08-01/tenantDeploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "subscriptionDisplayName": { "type": "string" },
    "enrollmentAccountName": { "type": "string" }
  },
  "resources": [
    {
      "type": "Microsoft.Subscription/aliases",
      "apiVersion": "2020-09-01",
      "name": "[parameters('subscriptionDisplayName')]",
      "properties": {
        "displayName": "[parameters('subscriptionDisplayName')]",
        "workload": "Production",
        "billingScope": "[format('/providers/Microsoft.Billing/enrollmentAccounts/{0}', parameters('enrollmentAccountName'))]"
      }
    }
  ]
}
